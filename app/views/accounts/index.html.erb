<div class="container">
  <div class="row">
  
    <div class="col-md-8">
      <% @posts.each do |post| %>
        <div class="post bg-white p-3 mb-4  border rounded" id="post-<%= post.id %>" >
        
          <div class="post-header d-flex align-items-center mb-2">
           <%= image_tag(
                 post.account.image.attached? ? url_for(post.account.image) : "default.png",
                 style: "width:40px; height:40px; border-radius:50%; object-fit:cover;",
                 alt: "#{post.account.username}'s profile image",
                 class: "me-2" ,
               ) %>
            <%= link_to post.account.username, show_path(post.account.username), class: "text-dark fw-bold" %>
          </div>
          
<div style="width: 100%; height: 400px; border-radius: 8px; overflow: hidden;">
  <% if t.last.present? && t.last.image.attached? %>
    <%= image_tag url_for(t.last.image),
          style: "width: 100%; height: 100%; object-fit: contain; background: #000000ff;",
          alt: "Post image" %>
  <% end %>
</div>





<div class="like-button d-flex align-items-center">
<%= render "posts/like_button", post: post %>

</div>
          <div class="post-description">
            <p class="mb-1">
              <%= link_to post.account.username, show_path(post.account.username), class: "text-dark fw-bold" %>
              <%= simple_format post.description %>
            </p>
            <p class="text-muted small"><%= time_ago_in_words post.created_at %> ago</p>
          </div>

<h4>Comments</h4>
<div id="comments_<%= post.id %>" style="height: 200px; overflow-y: scroll; border: 1px solid #ddd; border-radius: 6px; padding: 8px;">
<%= render "comments/form", post: post %>
</div>             
  </div>
      <% end %>
    </div>


    <div class="col-md-4">

      <div class="account-info bg-white p-3 mb-4 border rounded">
        <div class="d-flex align-items-center">
       <% if current_account.image.attached? %>
    <%= image_tag url_for(current_account.image), style: "width:50px; height:50px; border-radius:50%; object-fit:cover;" %> 
 <% else %>
     <%= image_tag "default.png", style: "width:50px; height:50px; border-radius:50%; object-fit:cover;" %>
  <% end %>
          <div>
         <%= link_to current_account.username, show_path(current_account.username), class: "text-dark fw-bold" %>

            <p class="text-muted small mb-0"><%= current_account.full_name %></p>
          </div>
        </div>
      </div>
      
    
      <div class=" follower-suggestion bg-white p-3 border rounded  ">
        <div class="  d-flex justify-content-between align-items-center mb-2">
          <p class="mb-0 fw-bold">Suggestions for you</p>
          <%= link_to "View All", "#", class: "text-dark small" %>
        </div>
<% @accounts.each do |account| %>
<div id="suggestion_<%= account.id %>">
  <div class="   suggestion d-flex align-items-center  mb-2 overflow-scroll  ">
   <% if account.image.attached? %>
    <%= image_tag url_for(account.image), style: "width:50px; height:50px; border-radius:50%; object-fit:cover;" %> 
 <% else %>
     <%= image_tag "default.png", style: "width:50px; height:50px; border-radius:50%; object-fit:cover;" %>
  <% end %>

  <div class="d-flex justify-content-between align-items-center w-100">
           <%= link_to account.username, show_path(account.username), class: "text-dark fw-bold" %>

    <%= render "accounts/follow_button", account: account %>
  </div>
</div>
  </div>
<% end %>

        <p class="text-muted small">No suggestions available.</p>
      
      </div>

    </div>

    
  </div>
</div>